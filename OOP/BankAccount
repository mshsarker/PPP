class BankAccount:
	def __init__(self, owner, balance = 0.0):
		self.owner = owner
		self.balance = balance
	def deposit(self,add):
		self.balance = self.balance + add
		return self.balance
	def withdraw(self,sub):
		self.balance = self.balance - sub
		return self.balance
acct = BankAccount('Dracy')
print(acct.owner)
print(acct.balance)
print(acct.deposit(10))
print(acct.withdraw(3))






